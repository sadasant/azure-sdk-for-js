{
  "compilerOptions": {
    "allowJs": false ,
    "allowSyntheticDefaultImports": true ,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable",
      "es5",
      "es6",
      "es7",
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist-esm",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "./samples/**/*.ts"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
